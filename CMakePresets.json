{
	"version": 10,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 31,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"generator": "Ninja Multi-Config",
			"hidden": true,
			"binaryDir": "${sourceDir}/.cmake/build",
			"installDir": "${sourceDir}/.cmake/install",
			"warnings": {
				"dev": false
			},
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "$env{CMAKE_CXX_STANDARD}",
				"CMAKE_C_STANDARD": "$env{CMAKE_C_STANDARD}",
				"ZTD_TEXT_GENERATE_SINGLE": true,
				"ZTD_TEXT_EXAMPLES": true,
				"ZTD_TEXT_TESTS": true,
				"ZTD_TEXT_BENCHMARKS": false,
				"ZTD_TEXT_DOCUMENTATION": false
			}
		},
		{
			"name": "msvc",
			"description": "MSVC default configuration",
			"displayName": "MSVC",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_CXX_FLAGS_INIT": "/Wv:18",
				"CMAKE_C_FLAGS_INIT": "/Wv:18",
				"CMAKE_CXX_COMPILER": "cl.exe",
				"CMAKE_C_COMPILER": "cl.exe"
			}
		},
		{
			"name": "gcc",
			"description": "GCC default configuration",
			"displayName": "GCC",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "g++",
				"CMAKE_C_COMPILER": "gcc"
			}
		},
		{
			"name": "clang",
			"description": "Clang default configuration",
			"displayName": "Clang",
			"inherits": "base",
			"cacheVariables": {
				"CMAKE_CXX_COMPILER": "clang++",
				"CMAKE_C_COMPILER": "clang"
			}
		},
		{
			"name": "documentation",
			"displayName": "Documentation",
			"generator": "Ninja Multi-Config",
			"description": "Generates the documentation for any system",
			"inherits": "base",
			"cacheVariables": {
				"ZTD_TEXT_GENERATE_SINGLE": false,
				"ZTD_TEXT_EXAMPLES": false,
				"ZTD_TEXT_TESTS": false,
				"ZTD_TEXT_BENCHMARKS": false,
				"ZTD_TEXT_EXCLUDE_FROM_ALL": true,
				"ZTD_TEXT_DOCUMENTATION": true
			}
		},
		{
			"name": "readthedocs",
			"displayName": "Documentation (ReadTheDocs)",
			"generator": "Ninja Multi-Config",
			"description": "Generates the documentation for a ReadTheDocs build",
			"inherits": "base",
			"cacheVariables": {
				"ZTD_TEXT_GENERATE_SINGLE": false,
				"ZTD_TEXT_EXAMPLES": false,
				"ZTD_TEXT_TESTS": false,
				"ZTD_TEXT_BENCHMARKS": false,
				"ZTD_TEXT_EXCLUDE_FROM_ALL": true,
				"ZTD_TEXT_DOCUMENTATION": true,
				"ZTD_TEXT_DOCUMENTATION_NO_SPHINX": true
			}
		},
		{
			"name": "local-base",
			"description": "Initial values for configuration",
			"displayName": "Core values for user CMake builds",
			"inherits": "base",
			"hidden": true,
			"binaryDir": "${sourceDir}/.cmake/build-${hostSystemName}",
			"installDir": "${sourceDir}/.cmake/install-${hostSystemName}",
			"warnings": {
				"dev": true
			},
			"cacheVariables": {
				"ZTD_TEXT_TESTS": true,
				"ZTD_TEXT_DOCUMENTATION": true,
				"ZTD_TEXT_GENERATE_SINGLE": true,
				"ZTD_TEXT_EXAMPLES": true,
				"ZTD_TEXT_BENCHMARKS": true,
				"ZTD_TEXT_BENCHMARKS_INTERNALS": true,
				"ZTD_TEXT_SCRATCH": true,
				"ZTD_TEXT_BOOST.TEXT": false,
				"ZTD_TEXT_ICU": true,
				"ZTD_TEXT_ICONV": false,
				"ZTD_PLATFORM_USE_LIBICONV": false,
				"ZTD_PLATFORM_USE_ICU": false,
				"ZTD_PLATFORM_USE_ENCODING_C": true,
				"ZTD_TEXT_BENCHMARKS_REPETITIONS": "2",
				"FETCHCONTENT_SOURCE_DIR_ZTD.CMAKE": "${sourceDir}/../cmake",
				"FETCHCONTENT_SOURCE_DIR_ZTD.IDK": "${sourceDir}/../idk",
				"FETCHCONTENT_SOURCE_DIR_ZTD.INLINE_CONTAINERS": "${sourceDir}/../inline_containers",
				"FETCHCONTENT_SOURCE_DIR_ZTD.CUNEICODE": "${sourceDir}/../cuneicode",
				"FETCHCONTENT_SOURCE_DIR_ZTD.ENCODING_TABLES": "${sourceDir}/../encoding_tables",
				"FETCHCONTENT_SOURCE_DIR_ZTD.PLATFORM": "${sourceDir}/../platform",
				"FETCHCONTENT_SOURCE_DIR_BOOST.TEXT": "${sourceDir}/../../text",
				"CMAKE_CXX_STANDARD": "23",
				"CMAKE_C_STANDARD": "23"
			}
		},
		{
			"name": "local-clang",
			"displayName": "Local Clang",
			"description": "Local default Clang configuration",
			"inherits": [
				"local-base",
				"clang"
			]
		},
		{
			"name": "local-gcc",
			"displayName": "Local GCC",
			"description": "Local default GCC configuration",
